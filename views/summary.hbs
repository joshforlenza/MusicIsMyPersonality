{{#if message}}
<h3>{{message}}</h3>

{{else}}

<div class="container">
  <div class="row">
    <div class="col-sm">
      <h3>Your Top Artists:</h3>
        {{#each topArtists}}
            <div>{{this.name}}</div>
        {{/each}}
    </div>
    <div class="col-sm">
      <h3>Summary</h3>
        {{summary}}
    </div>
    <div class="col-sm">
      <h3>Your Top Tracks:</h3>
        {{#each topTracks}}
            <div>{{this.name}}</div>
        {{/each}}
    </div>
  </div>
</div>

<div class="createPlaylist">
    <h3>Create A Playlist of Top Tracks?</h3>
    <form method="POST" action="">
        <input type="submit" value="Yes">
    </form>
</div>

{{/if}}

