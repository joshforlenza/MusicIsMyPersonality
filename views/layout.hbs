<!doctype html>
<html>
<head>
	<meta charset="utf-8">
	<title></title>
	<link rel="stylesheet" href="/css/styles.css">
</head>

<body>
	<div id="outer">
		<header>
			<nav>
				<span class="home-link"><a href="/">Home</a>
				<span class="login-status">
					{{#if user}}
					<br>
					Hello {{user.username}}
					<br>
					<a href="/summary">Summary</a>
					<a href="/profile/{{user.slug}}">Summary</a>
					<a href="/edit-profile">Edit Profile</a>
					{{else}}
					<a href="/login">Login</a>
					{{/if}}
				</span>
			</nav>
		</header>

		<h1>Music Is My Personality</h1>
		<div class="content">
			What does your music say about you?
			{{{ body }}}
		</div>
	</div>
</body>
</html>
